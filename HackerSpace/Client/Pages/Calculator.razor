@page "/calculator"
<h3>Calculator</h3>

<input type="number" name="num1" @bind="num1" />
+
<input type="number" name="num2" @bind="num2"/>

<button type="button" @onclick="OnSubmitClick" >=</button>

@result

@code {
    private double num1;
    private double num2;
    private double result = 0;

    private void OnSubmitClick()
    {
        result = num1 + num2;

    }
}